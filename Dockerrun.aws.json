{
  "AWSEBDockerrunVersion": "2",
  "containerDefinitions": [
    {
      "name": "client",
      "image": "sandersmoen/multi-client",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "server",
      "image": "sandersmoen/multi-server",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "worker",
      "image": "sandersmoen/multi-worker",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "sandersmoen/multi-nginx",
      "essential": true,
      "links": ["client", "server"],
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ]
    }
  ]
}
